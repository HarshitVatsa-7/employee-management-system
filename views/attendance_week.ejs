<% title = "This Week's Attendance" %>

<div class="page-header">
  <h2>This Week's Attendance</h2>
  <a href="/" class="btn secondary" style="text-decoration: none;">Back to Dashboard</a>
</div>

<div class="card">
  <table class="att-table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Punch In</th>
        <th>Punch Out</th>
        <th>Duration</th>
      </tr>
    </thead>
    <tbody>
      <% if (records.length === 0) { %>
        <tr>
          <td colspan="4" style="text-align: center; color: var(--muted);">No records found for this week.</td>
        </tr>
      <% } %>
      <% records.forEach(r => { %>
        <tr>
          <td><%= formatDate(r.in_time) %></td>
          <td><%= formatTime(r.in_time) %></td>
          <td><%= r.out_time ? formatTime(r.out_time) : '-' %></td>
          <td><b><%= formatDuration(r.duration_seconds) %></b></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>